{
  "manifest_version": 3,
  "name": "WhatsApp HubSpot Sync",
  "version": "1.0.0",
  "description": "Sync WhatsApp messages with HubSpot CRM",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://api.hubapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
  {
    "resources": ["fonts/css/*.css",
        "fonts/webfonts/*",
        "hubspot.css"],
    "matches": ["https://web.whatsapp.com/*"]
  }
]

}